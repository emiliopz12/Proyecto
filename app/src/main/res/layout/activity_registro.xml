<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.horse.proyecto.Registro">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#75767d"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.horse.proyecto.Registro">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/textEmail"
                android:textSize="25px"
                android:textStyle="bold"
                android:textColor="#000000" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editEmail"
                android:hint="Escribir email"
                android:background="@drawable/input_style" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contraseña"
                android:id="@+id/textContraseña"
                android:textSize="25px"
                android:paddingTop="20px"
                android:textStyle="bold"
                android:textColor="#000000" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editContraseña"
                android:hint="Escribir contraseña"
                android:background="@drawable/input_style" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repita la Contraseña"
                android:id="@+id/textContraseña2"
                android:textSize="25px"
                android:paddingTop="20px"
                android:textStyle="bold"
                android:textColor="#000000" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editContraseña2"
                android:layout_gravity="center_horizontal"
                android:hint="Repetir contraseña"
                android:background="@drawable/input_style" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:id="@+id/textNombre"
                android:textSize="25px"
                android:paddingTop="20px"
                android:textStyle="bold"
                android:textColor="#000000" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editNombre"
                android:layout_gravity="center_horizontal"
                android:hint="Escribir nombre"
                android:background="@drawable/input_style" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primer Apellido "
                android:id="@+id/textApellido1"
                android:textSize="25px"
                android:paddingTop="20px"
                android:textStyle="bold"
                android:textColor="#000000" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editApellido1"
                android:layout_gravity="center_horizontal"
                android:hint="Escribir primer apellido"
                android:background="@drawable/input_style" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Segundo Apellido"
                android:id="@+id/textApellido2"
                android:textSize="25px"
                android:paddingTop="20px"
                android:textStyle="bold"
                android:textColor="#000000" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editApellido2"
                android:hint="Escribir segundo apellido"
                android:background="@drawable/input_style" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono"
                android:id="@+id/textTelefono"
                android:textSize="25px"
                android:paddingTop="20px"
                android:textStyle="bold"
                android:textColor="#000000" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/editTelefono"
                android:layout_gravity="center_horizontal"
                android:maxLength="8"
                android:hint="Escribir número de teléfono"
                android:background="@drawable/input_style" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Nacimiento"
                android:id="@+id/textNacimiento"
                android:textSize="25px"
                android:paddingTop="20px"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:id="@+id/editNacimiento"
                android:minWidth="50dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@drawable/input_style"
                android:textSize="17dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cambiar Fecha"
                android:id="@+id/btnNacimiento"
                android:textSize="30px" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                android:id="@+id/btnRegistrarse"
                android:minWidth="200dp"
                android:layout_gravity="center_horizontal"
                android:enabled="true"
                style="@android:style/Widget.Button"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:id="@+id/btnCancelar"
                android:layout_gravity="center_horizontal"
                android:minWidth="200dp"
                style="@android:style/Widget.Button"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>



    </android.support.design.widget.CoordinatorLayout>

